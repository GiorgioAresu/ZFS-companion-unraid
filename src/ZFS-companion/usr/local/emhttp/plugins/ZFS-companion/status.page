<table id="db-box1" class="dash_zfscompanion dashboard box1" style="display:none">
    <thead sort="965" class="sortable">
        <tr>
            <td></td>
            <td class="next dash_zfscompanion_header" colspan="3">
                <div class="section dash_zfscompanion_section">ZFS
                    </span>
